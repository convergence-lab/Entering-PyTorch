"い":{"docs":{},"当":{"docs":{},"時":{"docs":{},"で":{"docs":{},"は":{"docs":{},"、":{"docs":{},"４":{"docs":{},"層":{"docs":{},"以":{"docs":{},"上":{"docs":{},"の":{"docs":{},"ニ":{"docs":{},"ュ":{"docs":{},"ー":{"docs":{},"ラ":{"docs":{},"ル":{"docs":{},"ネ":{"docs":{},"ッ":{"docs":{},"ト":{"docs":{},"ワ":{"docs":{},"ー":{"docs":{},"ク":{"docs":{},"の":{"docs":{},"学":{"docs":{},"習":{"docs":{},"は":{"docs":{},"現":{"docs":{},"実":{"docs":{},"的":{"docs":{},"に":{"docs":{},"困":{"docs":{},"難":{"docs":{},"で":{"docs":{},"し":{"docs":{},"た":{"docs":{},"。":{"docs":{},"そ":{"docs":{},"ん":{"docs":{},"な":{"docs":{},"中":{"docs":{},"、":{"docs":{},"h":{"docs":{},"i":{"docs":{},"n":{"docs":{},"t":{"docs":{},"o":{"docs":{},"n":{"docs":{},"達":{"docs":{},"は":{"docs":{},"、":{"docs":{},"デ":{"docs":{},"ィ":{"docs":{},"ー":{"docs":{},"プ":{"docs":{},"ラ":{"docs":{},"ー":{"docs":{},"ニ":{"docs":{},"ン":{"docs":{},"グ":{"docs":{},"に":{"docs":{},"よ":{"docs":{},"っ":{"docs":{},"て":{"docs":{},"当":{"docs":{},"時":{"docs":{},"の":{"docs":{},"最":{"docs":{},"先":{"docs":{},"端":{"docs":{},"ス":{"docs":{},"コ":{"docs":{},"ア":{"docs":{},"を":{"docs":{},"相":{"docs":{},"対":{"docs":{},"で":{"3":{"0":{"docs":{},"%":{"docs":{},"も":{"docs":{},"改":{"docs":{},"善":{"docs":{},"し":{"docs":{},"ま":{"docs":{},"し":{"docs":{},"た":{"docs":{},"。":{"docs":{},"こ":{"docs":{},"の":{"docs":{},"技":{"docs":{},"術":{"docs":{},"は":{"docs":{},"必":{"docs":{},"ず":{"docs":{},"身":{"docs":{},"に":{"docs":{},"つ":{"docs":{},"け":{"docs":{},"な":{"docs":{},"け":{"docs":{},"れ":{"docs":{},"ば":{"docs":{},"な":{"docs":{},"ら":{"docs":{},"な":{"docs":{},"い":{"docs":{},"と":{"docs":{},"、":{"docs":{},"当":{"docs":{},"時":{"docs":{},"の":{"docs":{},"私":{"docs":{},"は":{"docs":{},"思":{"docs":{},"っ":{"docs":{},"た":{"docs":{},"も":{"docs":{},"の":{"docs":{},"で":{"docs":{},"す":{"docs":{},"。":{"docs":{"./":{"ref":"./","tf":0.01694915254237288}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}},"docs":{}},"docs":{}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}}